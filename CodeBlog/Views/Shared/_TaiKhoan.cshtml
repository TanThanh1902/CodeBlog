
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
</head>
<body>
    <style>
        .form_login h3 {
            background: red;
            text-align: center;
            height: 50px;
            padding-top: 5px;
            text-transform: uppercase;
        }
        .form_login .form_border {
            margin-top: 10%;
            border: 1px solid #e3e1dc;
            border-radius: 5px;
            margin-left: 15%;
            width: 70%;
        }
        .form_login .form_content{
            padding: 50px;
        }
        .form_login .form_content .form_content_account{
            padding-left: 15%;
            padding-right: 15%;
        }
        .form_login .form_content .form_content_account .form_footer{
            text-align: center;
        }
        .form_login .form_content .form_content_account .form_footer a{
            width: 49%;
        }
    </style>
    <div class="form_login">
        <h3>CodeBlog</h3>
        <div class="container">
            <div class="form_border">
                <div class="form_content">
                    <h3 style="background: none">@ViewBag.Title</h3>
                    <br />
                    @if (ViewBag.ErrorAccount != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ErrorAccount
                        </div>
                    }
                    <div class="form_content_account">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
