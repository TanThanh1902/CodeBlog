                    <div class="card" style="background-color: burlywood">
                        <div class="card-body">
                            <div class="row">
                                <!--Slider quảng cáo-->
                                <div class="col-sm-3">
                                    <div class="w3-content w3-section" style="max-width:500px">
                                        <img class="mySlidesqc" src="~/Content/images/QuangCao/prudential-tuyen-dung-tu-van-tai-chinh-telemarketing.jpg" style="width:100%; height: 170px">
                                        <img class="mySlidesqc" src="~/Content/images/QuangCao/techcombank-tuyen-dung-giao-dich-vien-chuyen-vien-khach-hang.jpg" style="width:100%; height: 170px">
                                        <img class="mySlidesqc" src="~/Content/images/QuangCao/fpt-tuyen-dung.jpg" style="width:100%;height: 170px">
                                    </div>
                                </div>
                                <script>
                                    var myIndex = 0;
                                    carousel();

                                    function carousel() {
                                        var i;
                                        var x = document.getElementsByClassName("mySlidesqc");
                                        for (i = 0; i < x.length; i++) {
                                            x[i].style.display = "none";
                                        }
                                        myIndex++;
                                        if (myIndex > x.length) { myIndex = 1 }
                                        x[myIndex - 1].style.display = "block";
                                        setTimeout(carousel, 2500); // Change image every 2 seconds
                                    }
                                </script>
                                <!--//-->
                                <form action="@Url.Action("TimKiemTuKhoa", "TimKiemCode")" class="col-sm-6">
                                    <h5 style="font-weight: bold; color: red">Buôn bán + trao đổi code với nhau</h5>
                                    <h5>Hơn 0+ code đang chờ bạn khám phá</h5>
                                    <input type="search" class="form-control border border-success" placeholder="Nhập từ khóa, mã code,..." name="searchText" id="searchCode" />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <select class="form-control mt-3 border border-success" name="madanhmuc">
                                                @Html.Action("DanhMucCodeSelect", "TimKiemCode")
                                            </select>
                                        </div>
                                        <div class="col-sm-3">
                                            <select class="form-control mt-3 border border-success" name="matheloai">
                                                @Html.Action("TheLoaiCodeSelect", "TimKiemCode")
                                            </select>
                                        </div>
                                        <div class="col-sm-3">
                                            <select class="form-control mt-3 border border-success" name="mangonngu">
                                                @Html.Action("NgonNguCodeSelect", "TimKiemCode")
                                            </select>
                                        </div>
                                        <div class="col-sm-3">
                                            <button type="submit" class="btn btn-danger mt-3 w-100 font-weight-bold"><i class="fa fa-search">&nbsp;</i>Tìm kiếm</button>
                                        </div>
                                    </div>
                                </form>
                                <script>
                                    $(document).ready(function () {
                                        $("#searchCode").autocomplete({
                                            select: function (event, ui) {
                                                $(this).val(ui.item.codeName);
                                                return false;
                                            },
                                            source: function (request, response) {
                                                $.ajax({
                                                    type: "GET",
                                                    url: "/TimKiemCode/TimKiemGoiY",
                                                    data: { searchText: request.term },
                                                    success: function (data) {
                                                        response(data);
                                                    }
                                                });
                                            }
                                        })
                                            .autocomplete('instance')._renderItem = function (ul, item) {
                                                return $('<li>')
                                                    .append('<div class="row"><a href="/ChiTietCode/ChiTietCode?maCode=' + item.maCode + '"><div class="col-lg-3"><img style="width: 100%" src="/Content/images/image_code/anhdaidien/'
                                                        + item.anhMinhHoa + '" alt=' + item.tenCode + '/></div><div class="col-lg-9"><span>'
                                                        + item.tenCode + '</span></div></a></div>')
                                                    .appendTo(ul);
                                            }
                                    });
                                </script>
