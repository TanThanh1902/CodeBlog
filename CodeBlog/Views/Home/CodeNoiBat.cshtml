@using CodeBlog.Models;
@using CodeBlog.DAO;
@model List<CodeNoiBat>
@{ 
    int last = 1;
}

<style>
    .a_chuyen_trang a {
        color: #86C83F;
    }
    .a_chuyen_trang a:hover{
        color: black;
    }
</style>
    <div class="content-top-grids">
        <div class="wrap">
            <div class="content-top-header">
                <h3>Code nổi bật</h3>
                <p>Code được quan tâm và tải nhiều!</p>
            </div>
            <div class="clear"> </div>
            @foreach (var item in Model)
            {
                if (last % 3 == 0)
                {
                    <div class="content-top-grids-box last-grid-box">
                        <a href="#">
                            <div class='content-top-grid'>
                                <img class="grid-img" src='~/Content/images/default_background/@item.AnhDanhMuc' height="217" />
                            </div>
                        </a>
                        <div class="content-top-grid-title">
                            <div class="content-top-grid-title-left">
                                <h4><a href="@Url.Action("LocCodeTheoMaDanhMuc", "TimKiem", new { madanhmuc = item.MaDanhMuc})">@item.TenDanhMuc</a></h4>
                                <ul>
                                    @Html.Action("LayTheLoaiTheoMaDanhMuc", "HoTro", new { maDM = item.MaDanhMuc })
                                </ul>
                            </div>
                            <div class="content-top-grid-title-right a_chuyen_trang">
                                <a href="@Url.Action("LocCodeTheoMaDanhMuc", "TimKiem", new { madanhmuc = item.MaDanhMuc})"><i class="fa fa-chevron-circle-right" style="font-size: 25px;"></i></a>
                            </div>
                            <div class="clear"> </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="content-top-grids-box">
                        <a href="#">
                            <div class='content-top-grid'>
                                <img class="grid-img" src='~/Content/images/default_background/@item.AnhDanhMuc' height="217" />
                            </div>
                        </a>
                        <div class="content-top-grid-title">
                            <div class="content-top-grid-title-left">
                                <h4><a href="@Url.Action("LocCodeTheoMaDanhMuc", "TimKiem", new { madanhmuc = item.MaDanhMuc})">@item.TenDanhMuc</a></h4>
                                <ul>
                                    @Html.Action("LayTheLoaiTheoMaDanhMuc", "HoTro", new { maDM = item.MaDanhMuc})
                                </ul>
                            </div>
                            <div class="content-top-grid-title-right a_chuyen_trang">
                                <a href="@Url.Action("LocCodeTheoMaDanhMuc", "TimKiem", new { madanhmuc = item.MaDanhMuc})"><i class="fa fa-chevron-circle-right" style="font-size: 25px;"></i></a>
                            </div>
                            <div class="clear"> </div>
                        </div>
                    </div>
                }
                last++;
            }
            <div class="clear"> </div>
            <a class="btn btn-success" href="@Url.Action("TatCaCode", "TimKiem")" style="width: 20%;"><span style="text-align: center">Xem thêm</span></a>
        </div>
    </div>