
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HttpCookie tenND = Request.Cookies["TenND"];
}

<div class="row" style="padding: 20px">
    <div class="col-sm-3">
        <div class="card" style="font-size: 15px;">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active" style="background-color: forestgreen; font-weight: bold; font-size: 20px">
                    <div class="float-left">Thể loại</div>
                    <div class="float-right"><i class="fa fa-align-justify"></i></div>
                </a>
                @Html.Action("TheLoaiCode", "HoTro")
                <a href="#" class="list-group-item btn btn-danger" style="background-color: #dc3545">Xem tất cả</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card" style="height: 530px">
            <div class="card-body">
                <div class="" style="font-size: 16px">
                    <div class="drop-down">
                        <div id="menu">
                            <ul>
                                <li><a href="#CodeChat"><i class="fa fa-code">&nbsp;</i>Code chất</a></li>
                                <li><a href="#Website"><i class="far fa-window-restore">&nbsp;</i>Website</a></li>
                                <li><a href="#AppChung"><i class="fab fa-android">&nbsp;</i>App Mobile</a></li>
                                <li><a href="#AppChung"><i class="fab fa-windows">&nbsp;</i>Ứng dụng</a></li>
                                <li><a href="#AppChung"><i class="fa fa-gamepad">&nbsp;</i>Game</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/Content/Layout/images/2.jpg" alt="First slide" style="height: 400px">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Content/Layout/images/share-code-1.jpg" alt="Second slide" style="height: 400px">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Content/Layout/images/2.jpg" alt="Third slide" style="height: 400px">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card" style="height: 530px">
            <div class="card-body">
                <div class="row" style="font-size: 20px">
                    @if (tenND != null)
                    {
                        <div class="col-sm-12">
                            Hello @tenND.Value.ToString()
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-6">
                            <center>
                                <a href="@Url.Action("DangNhap", "TaiKhoan")"><i class="fa fa-sign-in-alt">&nbsp;</i><br />ĐĂNG NHẬP</a>
                            </center>
                        </div>
                        <div class="col-sm-6">
                            <center>
                                <a href="@Url.Action("DangKy", "TaiKhoan")"><i class="fa fa-user">&nbsp;</i><br />ĐĂNG KÝ</a>
                            </center>
                        </div>
                    }
                    <div class="col-sm-12">
                        <center>
                            <hr />
                            <div style="color: red"> Hoạt động gần đây</div>
                        </center>
                        <ul style="font-size: 15px" class="ml-3">
                            <li><span style="color: green">Tấn huỳnh</span><p>Vừa đăng 1 file</p></li>
                            <li><span style="color: green">Tấn huỳnh</span><p>Vừa nạp 10 xu</p></li>
                            <li><span style="color: green">Tấn huỳnh</span><p>Vừa đăng bài "code game android hay nhất"</p></li>
                            <li><span style="color: green">Tấn huỳnh</span><p>Vừa đăng bài "code game android hay nhất"</p></li>
                            <li><span style="color: green">Tấn huỳnh</span><p>Vừa đăng bài "code game android hay nhất"</p></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
