
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_TaiKhoan.cshtml";
}

    <form action="@Url.Action("DangKy", "TaiKhoan")" method="post">
        <input type="text" class="form-control" name="TaiKhoan" placeholder="Nhập tài khoản..." autocomplete="off" required oninvalid="this.setCustomValidity('Vui lòng nhập tài khoản!')" oninput="this.setCustomValidity('')"/>
        <br />
        <input type="password" class="form-control" name="MatKhau" placeholder="Nhập mật khẩu..." autocomplete="off" required oninvalid="this.setCustomValidity('Vui lòng nhập mật khẩu')" oninput="this.setCustomValidity('')"/>
        <br />
        <input type="password" class="form-control" name="NhapLaiMatKhau" placeholder="Nhập lại mật khẩu..." autocomplete="off" required oninvalid="this.setCustomValidity('Vui lòng nhập xác nhận mật khẩu!')" oninput="this.setCustomValidity('')"/>
        <br />
        <input type="checkbox" style="float: left;margin-top: 6px" id="ck_dk"/>&nbsp;<a href="#">Tôi đồng ý với các điều khoản của CodeBlog</a>
        <br /><br />
        <div class="form_footer">
            <input type="submit" value="Đăng ký" style="width: 99%" class="btn btn-success" id="btnSM" disabled/>
            <br /><br />
            <p>Hoặc đăng nhập nhanh với</p>
            <a href="#" class="btn btn-danger">Đăng nhập với Google</a>
            <a href="#" class="btn btn-primary">Đăng nhập với Facebook</a>
            <br /><br />
            <a href="#">Quên tài khoản?</a>&nbsp;<a href="#">Quên mật khẩu?</a>
            <br />
            <a href="@Url.Action("DangNhap", "TaiKhoan")">Tôi có tài khoản!</a>
        </div>
    </form>

<script>
    $(document).ready(function () {
        $("#ck_dk").click(function () {
            if ($(this).is(":checked")) {
                $("#btnSM").prop('disabled', false)
            }
            else {
                $("#btnSM").prop('disabled', true)
            }
        })
    })
</script>
