}
<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="full-navigation6">
                    <div class="container">
                        <div class="full-nav-top-top">


                            <div class="full-navigation-nav1">

                                <span class="nav-full">
                                    <i class="fa fa-bars"></i>
                                </span>
                                <script>
                                            $("span.nav-full").click(function () {
                                                $("ul.top-nav2").slideToggle("slow", function () {
                                                    // Animation complete.
                                                });
                                            });
